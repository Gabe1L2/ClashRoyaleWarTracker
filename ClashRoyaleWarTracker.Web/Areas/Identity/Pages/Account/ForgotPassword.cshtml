@page
@{
    ViewData["Title"] = "Password Reset";
}

<div class="row justify-content-center">
    <div class="col-lg-5 col-md-7 col-sm-9">
        <!-- Password Reset Disabled Card -->
        <div class="card shadow-sm">
            <div class="card-header bg-warning text-dark">
                <h4 class="card-title mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>Password Reset Disabled
                </h4>
            </div>
            <div class="card-body p-4 text-center">
                <div class="mb-4">
                    <i class="fas fa-lock fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Self-Service Password Reset Not Available</h5>
                </div>
                
                <p class="card-text mb-4">
                    Automated password reset is not available for this application. 
                    For security reasons, password changes must be handled by an administrator.
                </p>
                
                <div class="alert alert-info mb-4">
                    <h6 class="alert-heading">
                        <i class="fas fa-info-circle me-2"></i>Need to Reset Your Password?
                    </h6>
                    <p class="mb-0">
                        Please contact the system administrator to request a password reset. 
                        Include your username and a brief explanation in your request.
                    </p>
                </div>

                <div class="d-grid gap-2">
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg">
                        <i class="fas fa-arrow-left me-2"></i>Back to Login
                    </a>
                </div>
            </div>
        </div>

        <!-- Contact Information Card -->
        <div class="card mt-4 border-primary">
            <div class="card-body text-center">
                <h6 class="card-title text-primary">
                    <i class="fas fa-user-shield me-2"></i>Administrator Contact
                </h6>
                <p class="card-text text-muted small mb-2">
                    For password reset requests or account issues:
                </p>
                <p class="text-muted">
                    <strong>Contact the system administrator</strong><br>
                    <small class="text-muted">Response time: 24-48 hours</small>
                </p>
            </div>
        </div>

        <!-- Demo Account Reminder -->
        <div class="card mt-4 border-info">
            <div class="card-body text-center">
                <h6 class="card-title text-info">
                    <i class="fas fa-info-circle me-2"></i>Demo Access Available
                </h6>
                <p class="card-text text-muted small mb-0">
                    You can explore the application using the guest account available on the login page.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Any client-side JavaScript if needed
        });
    </script>
}