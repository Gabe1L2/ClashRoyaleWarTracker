@page
@{
    ViewData["Title"] = "Registration Disabled";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body text-center">
                <h2 class="card-title">Registration Disabled</h2>
                <p class="card-text">
                    Public registration is not available for this application. 
                    Please contact the administrator for access.
                </p>
                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary">Go to Login</a>
            </div>
        </div>
    </div>
</div>